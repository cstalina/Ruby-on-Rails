<h1>Maftei & Costache's BLOG</h1>
<br/>

<%=form_tag({action:"filter"}) do %>
    <%= text_field_tag :query %>
    <%= submit_tag "Search" %>
<% end %>   

<ul>
<% @articles.each do |article| %>
	<li>
		<div>

  			<h3 > <%= link_to article.title, "/articles/#{article.id}" %></h3> 
    		<p> 

    		<%= article.created_at.strftime("%B %d, %Y") %> 
    		</p>

    		
		</div>
	</li>
<% end %>
</ul>